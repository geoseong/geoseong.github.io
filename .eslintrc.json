{
	"extends": [
		"standard",
    "plugin:react/recommended",
		"prettier"
	],
	"plugins": ["standard", "react"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 10,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
    "indent": ["error", 2],
		"semi": ["error", "never"],
		"no-var": "error",
		"no-unused-vars": 1,
		"no-return-assign": 0,
		"newline-per-chained-call": ["error", { "ignoreChainWithDepth": 3 }],
		"react/prop-types": 0,
    "arrow-spacing": ["error", { "before": true, "after": true }]
	}
}