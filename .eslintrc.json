{
	"extends": [
		"standard",
    "plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": ["standard", "react"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"settings": {
		"react": {
			"createClass": "createReactClass",
			"pragma": "React",
			"version": "detect"
		}
	},
	"rules": {
		"no-var": "error",
		"no-unused-vars": 1,
		"no-return-assign": 0,
		"no-regex-spaces": 0,
		"newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
		"react/prop-types": 0,
    "arrow-spacing": ["error", { "before": true, "after": true }]
	}
}